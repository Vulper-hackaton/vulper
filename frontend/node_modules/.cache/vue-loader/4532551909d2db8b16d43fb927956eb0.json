t-center\">\n            <button id=\"but0\" type=\"submit\" class=\"btn rounded\">\n              Criar Usu√°rio\n            </button>\n        </div>\n      </form>\n    </div>\n  </div>\n</template>\n\n<script>\n  import * as firebase from \"firebase/app\";\n  import \"firebase/auth\";\n  export default {\n    data() {\n      return {\n        email: \"\",\n        password: \"\",\n        error: \"\",\n      };\n    },\n    methods: {\n      async pressed() {\n        await firebase\n          .auth()\n          .createUserWithEmailAndPassword(this.email, this.password)\n                .then(() => {\n                  let newUserMail = {\"email\":this.email};\n                  let newUserId = firebase.auth().currentUser.uid;\n                  firebase.firestore().collection('users').doc(newUserId).set(newUserMail, {merge: true});\n                  this.$router.replace({ name: \"edit-user\" });\n          }).catch((error) => (this.error = error));\n      },\n    },\n  };\n</script>\n\n<style lang=\"scss\" scoped>\n#but0 {\n  background: transparent linear-gradient(270deg, #4dde90 0%, #10c0c6 100%);\n  font-family: \"Lato\", sans-serif;\n}\n#body {\n  background-color: #f1f1f1;\n  min-height: 100vh;\n}\n.error {\n  color: red;\n  font-size: 18px;\n  text-align: center;\n}\n</style>\n"]}]}